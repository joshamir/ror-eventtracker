
  <h2 class="page-header"><%= @event.name %> <small> <a href="/">Back to Event Hub</a></small></h2>


<h3><%= @event.description %></h3>
<p><%= @event.location %></p>
<p><%= @event.date.to_formatted_s(:long) %></p>
<h3>Participants</h3>
<ul>
  <% @event.participants.each do |single_participant| %>
    <li><strong><%= single_participant.popularity_label + " " %></strong><%= single_participant.name %> is bringing <%= single_participant.guests %> guests<br />
      Bringing a guest? <%= button_to "Guest +1", add_guest_event_participant_path(@event.id, single_participant.id), :class => "brn btn-info " %>
    </li>
  <% end %>
</ul>

<h2>Add Participant</h2>

<%= form_for [@event, @event.participants.new] do |form| %>
  	<div class="form-group">
	  <%= form.text_field :name %>
	  <%= form.submit %>
	</div>
<% end %>

<h2>Add Date to Event</h2>
<%= form_for @event do |form| %>
	<div class="form-group">
		<%= form.text_field :date %>
	  	<%= form.submit %>
	 </div>
  <% end %>



